<div style="display: flex; justify-content: center; align-items: center;">

  <div style="width: 300px; border: 2px solid gray; padding: 20px; border-radius: 20px;">

    <div>
      <% if @task.errors.any? %>
        <% @task.errors.full_messages.each do |type| %>
          <ul style="color: white">
            <li><%= type %></li>
          </ul>
        <% end %>
      <% end %>
    </div>

    <%= form_with model: [@project, @task], local: true do |form| %>

      <div style="color: white">
        <%= form.label :name %><br>
        <%= form.text_field :name %>
      </div>
      <br>

      <div style="color: white">
        <%= form.label :description %><br>
        <%= form.text_area :description, rows: 3 %>
      </div>
      <br>

      <div style="color: white">
        <%= form.label :priority %><br>
        <%= form.select :priority, Task.priorities.keys.map { |key| [key.humanize, key]} %>
      </div>
      <br>

      <div style="color: white">
        <%= form.label :status %><br>
        <%= form.select :status, Task.statuses.keys.map { |key| [key.humanize, key]} %>
      </div>
      <br>

      <div style="color: white">
        <%= form.label :developers %><br>
        <%= form.collection_check_boxes :developer_ids, @developers, :id, :name do |b| %>
          <div>
            <%= b.check_box %>
            <%= b.label %>
          </div>
        <% end %>
      </div>

      <br>
      <% if @task.persisted? %>
        <%= form.submit "Update Task", style: "border: 1px solid gray; border-radius: 5px; background-color: green; padding: 2px; margin: 2px; color: white; text-decoration: none " %>
      <% else %>
        <%= form.submit "Create Task", style: "border: 1px solid gray; border-radius: 5px; background-color: green; padding: 2px; margin: 2px; color: white; text-decoration: none " %>
      <% end %>

    <% end %>
  </div>
</div>
